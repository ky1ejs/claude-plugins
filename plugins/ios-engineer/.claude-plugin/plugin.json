{
  "name": "ios-engineer",
  "version": "1.1.0",
  "description": "iOS development tools with visual feedback via iOS Simulator MCP integration",
  "mcpServers": {
    "ios-simulator": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "ios-simulator-mcp"
      ],
      "env": {
        "IOS_SIMULATOR_MCP_DEFAULT_OUTPUT_DIR": "./ios/.screenshots"
      }
    }
  }
}